{
  "name": "simple-peer-light",
  "description": "Simple, light-weight WebRTC video/voice and data channels",
  "version": "1.0.0",
  "author": {
    "name": "BMZ"
  },
  "bugs": {
    "url": "https://github.com/mitschabaude/simple-peer-light/issues"
  },
  "dependencies": {
    "eventemitter3": "^4.0.7"
  },
  "devDependencies": {
    "airtap": "^3.0.0",
    "babel-minify": "^0.5.1",
    "bowser": "^2.11.0",
    "browserify": "^17.0.0",
    "coveralls": "^3.1.0",
    "esbuild": "^0.8.51",
    "nyc": "^15.1.0",
    "prettier-bytes": "^1.0.4",
    "simple-get": "^4.0.0",
    "speedometer": "^1.1.0",
    "standard": "*",
    "string-to-stream": "^3.0.1",
    "tape": "^5.0.1",
    "thunky": "^1.1.0",
    "wrtc": "^0.4.6",
    "ws": "^7.3.1"
  },
  "keywords": [
    "data",
    "data channel",
    "data channel stream",
    "data channels",
    "p2p",
    "peer",
    "peer",
    "peer-to-peer",
    "stream",
    "video",
    "voice",
    "webrtc",
    "webrtc stream"
  ],
  "license": "MIT",
  "main": "simple-peer-light.min.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/bmz1/simple-peer-light.git"
  },
  "scripts": {
    "build:esm": "esbuild index.js --bundle --minify --sourcemap --target=chrome58,firefox57,safari11,edge16 --outfile=simple-peer-light.min.js",
    "build": "minify index.js --sourceType module --outFile simplepeer.min.js",
    "build-browserify": "browserify -s SimplePeer -r . | minify > simplepeer.min.js",
    "size": "npm run build && cat simplepeer.min.js | gzip | wc -c",
    "test": "standard && npm run test-node && npm run test-browser",
    "test-browser": "airtap --coverage -- test/*.js",
    "test-browser-local": "airtap --coverage --local -- test/*.js",
    "test-node": "WRTC=wrtc tape test/*.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  }
}
